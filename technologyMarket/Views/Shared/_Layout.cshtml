<body>
    <!-- HEADER -->
    <header>
        <!-- TOP HEADER -->
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> +0850-444-00-84</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> technology@marketing.com</a></li>
                    <li><a href="#"><i class="fa fa-map-marker"></i> İstanbul</a></li>
                </ul>

                <ul class="header-links pull-right">

                    @if (User.Identity.IsAuthenticated)
                    {
        <li><a href="/User/Update"><i class="fa fa-user"></i> @Session["Name"] @Session["Surname"]</a></li>


                        <li><a href="/Account/LogOut"><i class="fa fa-lock"></i> Logout</a></li>
 }
                    else
                    {
        <li><a href="/Account/Login"><i class="fa fa-lock"></i> Login</a></li>
}

                    @if (User.IsInRole("Admin"))
                    {
        <li><a href="/Admin/Index"><i class="fa fa-lock"></i> Admin Panel</a></li>
}

                    @if (User.Identity.IsAuthenticated)
                    {
        <li>
            <a href="/Cart/Index">
                <img src="~/img/sepet.png" width="30" height="30" />
                <label style="color:red">@{Html.RenderAction("TotalCount", "Cart");}</label>My Cart
            </a>
        </li>
                        <li><a href="/Sales/Index"><i class="fa fa-dollar"></i> Sales</a></li>
}
                </ul>
            </div>
        </div>
        <!-- /TOP HEADER -->
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="/Home/Index" class="logo">
                                <img src="~/img/logo.png" href="/Home/Index" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            <form>
                                <select class="input-select">
                                    <option value="0">All Categories</option>
                                    <option value="1">Category 01</option>
                                    <option value="1">Category 02</option>
                                </select>
                                <input class="input" placeholder="Search here">
                                <button class="search-btn">Search</button>
                            </form>
                        </div>
                    </div>
                    <!-- /SEARCH BAR -->
                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">



                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li class="active"><a href="/Home/Index">Home</a></li>
                    <li><a href="#">Hot Deals</a></li>
                    <li><a href="#">Categories</a></li>
                    <li><a href="#">Laptops</a></li>
                    <li><a href="#">Smartphones</a></li>
                    <li><a href="#">Cameras</a></li>
                    <li><a href="#">Accessories</a></li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->

    @RenderBody()

    <!-- NEWSLETTER -->
