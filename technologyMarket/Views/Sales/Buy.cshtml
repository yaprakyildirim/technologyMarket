@model technologyMarket.EntityLayer.Entitites.Cart
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-header">
    <h2>Buy</h2>
</div>

<div class="container">
    @using (Html.BeginForm("Buy2", "Sales", FormMethod.Post))
            {
    <div class="modal-body">
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            User Name Surname: @Session["Name"] @Session["Surname"]
        </div>

        <div class="form-group">
            Product Information: @Html.DisplayFor(x => x.Product.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            Quantity: @Html.DisplayFor(x => x.Quantity, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <img src="~/img/@Model.Product.Image" width="80" height="80" />
        </div>

        <div class="form-group">
            Price: @Html.DisplayFor(x => x.Price, new { @class = "form-control" })
        </div>
    </div>

    <div class="modal-footer" style="float:right">
        <button class="btn btn-success">Buy</button>
        <a href="/Cart/Index" class="btn btn-dark">Cancel</a>
    </div>
            }
</div>